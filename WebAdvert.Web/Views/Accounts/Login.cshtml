
@{
    ViewData["Title"] = "Login";
}

@model WebAdvert.Web.Models.Accounts.LoginModel;

<h1>Login</h1>


<div class="row">
    <div class="col-md-4">
        <h4>Login using email address and password</h4>
        <h5>
            If you are not a member, you can 
            <a asp-controller="Accounts" asp-action="Signup">Sign up here</a> 
        </h5>
        <hr />
        <form method="post" asp-controller="Accounts" asp-action="Login_Post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
